#Fix warning
modprobe 8021q

#Opening ports
ifconfig eth0 up
ifconfig eth1 up
ifconfig eth2 up
ifconfig eth3 up
ifconfig eth4 up

#Configuring VLAN NFS_A --> WEB_A WEB_B: VLAN 200
vconfig add eth3 200

#Router B - Router Office
ifconfig eth0 192.168.3.10/30 up

#Router B - Router A
ifconfig eth1 192.168.3.2/30 up

#Router B - B DB
ifconfig eth4 192.168.2.33/29 up

#Router B - B WEB VLAN: 200
ifconfig eth3.200 192.168.2.17/28 up

#Router B - B NFS
ifconfig eth2 192.168.2.1/28 up

route add -net 192.168.1.0 netmask 255.255.255.240 gw 192.168.3.1 dev eth1
route add -net 192.168.1.16 netmask 255.255.255.240 gw 192.168.3.1 dev eth1
